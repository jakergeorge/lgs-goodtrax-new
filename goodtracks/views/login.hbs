<body id="login">
{{#if message}}
    <div class="alert alert-dismissible alert-danger col-md-12">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <strong>Username or password incorrect.</strong>

    </div>
{{/if}}
<h2 id="login-header">Welcome to</h2> <h2 id="logo">GoodTracks</h2>



<div id="login-well" class="well bs-component col-md-4 col-md-offset-4">

    <form method="POST" action="" class="form-horizontal col-md-12">
        <fieldset>

            <input name="username" type="text" class="form-control" placeholder="Username">
            <input name="password" type="password" class="form-control" placeholder="Password">
            <div class="col-md-10 col-md-offset-1 text-center">
                <input type="submit" value="Login" class="btn btn-raised btn-default">
            </div>
        </fieldset>
    </form>
</div>

<div class="col-md-12 text-center">
    <a href="/register" class="btn btn-raised btn-default">Register</a>
</div>
</body>